<UserControl x:Class="ExtractMe.MyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DataContext="{StaticResource MyViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Background="LightBlue" Height="60" Visibility="{Binding ShowHeader, Converter={StaticResource VisibilityConverter}}">
            <TextBlock Text="{Binding Header}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Row="1" >
            <ListBox Background="LightGray" ItemsSource="{Binding Liste}" />
        </Border>
        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" Background="LightBlue" Height="60" Visibility="{Binding ShowFooter, Converter={StaticResource VisibilityConverter}}">
            <TextBlock Text="{Binding Footer}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
    </Grid>
</UserControl>
